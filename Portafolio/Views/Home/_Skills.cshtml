@model Person
@using System.Linq

<div style="margin-top: -6rem;"
    <div class="row justify-content-md-center text-center">
        <div class="col col-6 bg-white skills" style="padding: 1rem; border-radius: 15px 15px 15px 15px; box-shadow: 0 5px 5px 0 gray;">
            <h1>My skills <i class="bi bi-code"></i></h1>
            @foreach (var skill in Model.Skills)
            {
                    <h3 style="margin-top: 1rem;">@skill.Key</h3>
                        @foreach (var item in skill.Value)
                        {
                            // Concatenate the items with a comma
                            <span>@item</span>
                            @if (item != skill.Value.Last())
                            {
                                <span>, </span>
                            }
                        }
            }
    </div>
</div>