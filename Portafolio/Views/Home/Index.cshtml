@* @model string *@
@model Person


@{
    ViewData["Title"] = "Home Page";
    @* var names = new List<string> { "Luis", "Jorge", "Carlos" }; *@
}

<div class="text-center">
    @* <h1 class="display-4">I'm @ViewBag.Name</h1> *@
    @* <h1 class="display-4">I'm @Model</h1>  *@
    <h1 class="display-4">I'm @Model.Name</h1> 
    <h2>@Model.Occupation</h2>
    @* <ul>
        @foreach (var name in names)
        {
            <li>@name</li>
        }
    </ul> *@

    <img 
    id="picture"
    src="~/img/profile.jpg" alt="Luis's photo"/>
</div>

<div class="text-center">
    <img id"img-technologies"  src="~/img/technologies.png" alt="Technologies" />
</div>

<div class="row justify-content-center text-center bg-primary">
    <div class="col col-md-7 seccion-about">
        <h1>About me:</h1>
        <p>@Model.AboutMe</p>
    </div>
</div>

<div style="margin-top: -6rem;"
<div class="row justify-content-md-center text-center">
    <div class="col col-6 bg-white" style="padding: 1rem; border-radius: 15px 15px 15px 15px; box-shadow: 0 5px 5px 0 gray;">
        <h1>My skills</h1>
        @foreach (var skill in Model.Skills)
        {
                <h3 style="margin-top: 1rem;">@skill.Key</h3>
                    @foreach (var item in skill.Value)
                    {
                        // Concatenate the items with a comma
                        <span>@item</span>
                        @if (item != skill.Value.Last())
                        {
                            <span>, </span>
                        }
                    }
        }
    </div>
    </div>